/* pages/user/user.wxss */
.userinfo {
  width: 100%;
  height: 100%;
  font-family: Arial, Helvetica, sans-serif;
  position: relative;
}

.headpic {
  overflow: hidden;
  text-align: center;
  padding-top: 120rpx;
}

.headpic image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}

.username {
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
}

.where {
  color: #757575;
  text-align: center;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.calcel {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 60rpx;
  color: #fff;
  background: rgb(164, 12, 12);
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}
