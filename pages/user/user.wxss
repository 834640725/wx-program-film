/* pages/user/user.wxss */
.userinfo {
  width: 100%;
  height: 100%;
  background: #fafafa;
  padding-top: 20rpx;
}

/* 头像信息 */
.headpic {
  width: 100%;
  height: 350rpx;
  background: #fff;
  margin-bottom: 20rpx;
  text-align: center;
  padding-top: 68rpx;
  box-sizing: border-box;
}

.headpic image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.username {
  margin-top: 40rpx;
  font-size: 28rpx;
}

.username .vip {
  font-size: 20rpx;
   color: red; 
  font-weight: 700;
  margin: 0 4rpx;
}

.username image {
  width: 22rpx;
  height: 22rpx;
  margin-left: 8rpx;
}

.lookback {
  padding: 0 22rpx;
  height: 116rpx;
  width: 100%;
  background: #fff;
  line-height: 116rpx;
  font-size: 28rpx;
  font-weight: 700;
  position: relative;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.lookback image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right:20rpx;
  top: 36rpx;
}